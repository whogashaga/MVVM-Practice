<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    tools:ignore="UnusedNavigation"
    app:startDestination="@id/main_fragment">

    <fragment
        android:name="com.example.mvvmassignment.ui.main.MainFragment"
        android:id= "@+id/main_fragment"
        android:label="@string/tag_fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_fragment_to_detail_fragment"
            app:destination="@id/detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.example.mvvmassignment.ui.DetailFragment"
        android:label="@string/tag_fragment_detail">
        <action android:id="@+id/action_detail_fragment_to_main_fragment" />
    </fragment>

</navigation>